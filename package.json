{
  "name": "playwright-homeworks",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "test": "npx playwright test",
    "ui-mode": "npx playwright test --ui",
    "test:ui:regression": "npx playwright test --project=sales-portal-ui --grep @regression|@smoke",
    "test:ui:smoke": "npm run test -- --project=sales-portal-ui --grep @smoke",
    "html-report": "npx playwright show-report",
    "allure-report": "allure generate allure-results -o allure-report --clean",
    "allure-report-open": "npm run allure-report && allure open allure-report",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --config .prettierrc src/**/*.ts --check src/",
    "format": "prettier --write ."
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/ajv": "^1.0.4",
    "@types/dotenv": "^8.2.3",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.7.0",
    "@types/numeral": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "bson": "^7.0.0",
    "dotenv": "^17.2.3",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "numeral": "^2.0.6"
  }
}
